package com.internousdev.travel.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import com.internousdev.travel.util.DBConnector;

public class BuyItemCompleteDAO {

	private DBConnector dbConnector = new DBConnector();

	private Connection connection = dbConnector.getConnection();



	private String sql = "INSERT INTO user_buy_item_transaction (item_transaction_id, item_name, total_price, total_count, user_master_id, pay) VALUES(?, ?, ?, ?, ?)";


	public void buyItemInfo(int item_transaction_id,String itemName, String user_master_id, String total_price, String total_count, String pay) throws SQLException {

		try {
			PreparedStatement preparedStatement = connection.prepareStatement(sql);
			preparedStatement.setInt(1, item_transaction_id);
			preparedStatement.setString(2, itemName);
			preparedStatement.setString(3, total_price);
			preparedStatement.setString(4, total_count);
			preparedStatement.setString(6, user_master_id);
			preparedStatement.setString(7, pay);


			preparedStatement.execute();

		} catch(Exception e) {
			e.printStackTrace();
		} finally {
			connection.close();
		}
	}
}
