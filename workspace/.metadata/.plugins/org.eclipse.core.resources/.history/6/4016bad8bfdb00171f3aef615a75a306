drop database if exists ecsite;
create database ecsite;
use ecsite;

create table login_user_transaction(
id int not null primary key auto_increment,
login_id varchar(16),
user_name varchar(255),
login_pass varchar(255),
insert_date datetime,
updated_date datetime
);


drop table if exists buy_item_transaction;
create table buy_item_transaction(
id int not null primary key auto_increment,
item_transaction_id int,
total_count int,
total_price int,
user_master_id varchar(16),
pay varchar(30),
insert_date datetime,
updated_date datetime
);

drop table if exists item_info_transaction;
create table item_info_transaction(
id int not null primary key auto_increment,
item_name varchar(30),
item_price int,
insert_date datetime,
updated_date datetime
);

create table inquiry(
name varchar(255),
qtype varchar(255),
body varchar(255)
);

insert into item_info_transaction(item_name,item_price) values("japan",50000);
insert into login_user_transaction(login_id,login_pass,user_name) values("internous","internous01","yuichi");


